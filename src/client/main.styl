@import './variables.styl'

*
  margin 0
  padding 0

body
  width 100vw
  font-size 100%
  background-color color-darkest
  font-family 'PT Sans', Arial, sans-serif
  

h1, h2, h3, h4
  margin 0
  font-family 'PT Serif', sans-serif
  font-weight 400
  text-align center
  
button, .button, input, textarea, select
  font-size .8em
  padding .5em 1em
  border-radius 2px
  border 1px solid darken(color-gray, 15)
  text-decoration none
  transition border 0.5s, box-shadow 0.5s

button, .button
  background-color color-black
  color color-light
  border 1px solid color-lightest
  cursor pointer
  
  &:hover
    background-color color-dark
    border 1px solid lighten(color-lightest, 10)
    box-shadow  0 0 3px color-light

  &.disabled
    background-color lighten(color-gray, 50)
    color lighten(color-black, 40)

input, textarea, select
  color color-normal
  border color-lightest 1px solid

*:focus
  outline none
  

.Loader, .Loader:before, .Loader:after
  background color-white
  animation load1 1s infinite ease-in-out
  width 1em
  height 4em
  
.Loader:before, .Loader:after
  position absolute
  top 0
  content ''
  
.Loader:before
  left -1.5em
  animation-delay -0.32s
  
.Loader
  color color-white
  text-indent -9999em
  margin 88px auto
  position relative
  font-size 11px
  transform translateZ(0)
  animation-delay -0.16s

.Loader:after
  left 1.5em

@keyframes load1
  0%, 80%, 100%
    box-shadow 0 0
    height 4em
    
  40%
    box-shadow 0 -2em
    height 5em

  
  